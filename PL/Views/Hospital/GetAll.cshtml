@model ML.Hospital
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">Listado de hospitales</h1>

@if(Model == null)
{
    <p>No hay datos</p>
}
else
{
    <div>
        <table class="table table-striped table-bordered table-dark">
            <thead class="table table-info">
                <tr>
                    <th>Nombre</th>
                    <th>Dirección</th>
                    <th>Año Construcción</th>
                    <th>Capacidad</th>
                    <th>Especialidad</th>

                </tr>
            </thead>

            <tbody>
                @foreach(ML.Hospital hosp in Model.Hospitales)
                {
                    <tr>
                        <td>@hosp.Nombre</td>
                        <td>@hosp.Direccion</td>
                        <td>@hosp.AnioConstruccion.ToShortDateString()</td>
                        <td>@hosp.Capacidad</td>
                        <td>@hosp.Especialidad.Nombre</td>
                        
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

